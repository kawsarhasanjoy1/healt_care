{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2023"],

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },

  "include": [
    "src/**/*.ts",
    "**/*.cjs",
    "**/*.mjs",
    "prisma/**/*.prisma"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}